[Unit]
Description=DayPlanner FastAPI Service
After=network.target

[Service]
User=ubuntu
Group=users
WorkingDirectory=/opt/dayplanner/api
Environment=PUBLIC_BASE_URL=https://dp.lala.dedyn.io
ExecStart=/opt/dayplanner/api/.venv/bin/uvicorn main:app --host 127.0.0.1 --port 8001 --workers 2
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target

